<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".ui.fragment.user_cycle.ForgotPassword1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textView"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension200"
                android:layout_marginEnd="@dimen/dimension24"
                android:text="نسيت كلمة المرور"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textView2"
                style="@style/no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension8"
                android:text="المرور الخاصة بك. ستتلقى رسالة بريد إلكتروني تحتوي على إرشادات\n حول كيفية إعادة تعيين كلمة المرور الخاصة بك. إذا كنت تواجه\n مشاكل في إعادة تعيين كلمة المرور ، فاتصل بنا أو أرسل لنا رسالة\n بريد إلكتروني"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <com.example.fontutil.EditTextCustomFont
                android:id="@+id/ET_ForgotPassEmail"
                style="@style/EditTextStyle"
                android:layout_width="@dimen/dimension0"
                android:layout_marginStart="24dp"
                android:layout_marginTop="@dimen/dimension32"
                android:layout_marginEnd="@dimen/dimension24"
                android:hint="البريد الاكتروني"
                android:inputType="textEmailAddress"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <com.example.fontutil.ButtonCustomFont
                android:id="@+id/BTN_Restore_password_btn"
                style="@style/login_btn"
                android:layout_width="@dimen/dimension0"
                android:layout_height="@dimen/dimension50"
                android:layout_marginTop="@dimen/dimension16"
                android:background="@drawable/login_btn"
                android:text="استعادة كلمة المرور"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="@+id/ET_ForgotPassEmail"
                app:layout_constraintStart_toStartOf="@+id/ET_ForgotPassEmail"
                app:layout_constraintTop_toBottomOf="@+id/ET_ForgotPassEmail" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/TV_ForgotPass_LoginLink_"
                style="@style/no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تسجيل الدخول"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintBottom_toBottomOf="@+id/TV_ForgotPass_CreateAccountLink"
                app:layout_constraintStart_toStartOf="@+id/BTN_Restore_password_btn"
                app:layout_constraintTop_toTopOf="@+id/TV_ForgotPass_CreateAccountLink" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/TV_ForgotPass_CreateAccountLink"
                style="@style/no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension8"
                android:layout_marginBottom="@dimen/dimension32"
                android:text="ليس لديك حساب بعد, افتح واحدا"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/BTN_Restore_password_btn"
                app:layout_constraintTop_toBottomOf="@+id/BTN_Restore_password_btn" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>